<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="CustomEntriesExample.MainPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:customentries="clr-namespace:CustomEntries;assembly=CustomEntries"
    xmlns:d="http://xamarin.com/schemas/2014/forms/design"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
            <customentries:FloatingLabelEntry
                Margin="30,0"
                Placeholder="Floating Label"
                TitleColor="CornflowerBlue"
                WidthRequest="300" />
            <customentries:AnimatedBorderEntry
                Margin="30,0"
                EndColor="Purple"
                GradientColor="True"
                Placeholder="Animated"
                StartColor="Violet"
                TitleColor="Gray"
                WidthRequest="300" />
            <customentries:BorerlessFloatingLabelEntry
                ActiveBorderColor="LightCoral"
                ActiveTextColor="LightCoral"
                DefaultBorderColor="LightGray"
                DefaultTextColor="LightGray"
                HorizontalOptions="CenterAndExpand"
                Placeholder="Username"
                VerticalOptions="CenterAndExpand"
                WidthRequest="150" />

            <customentries:BorerlessFloatingLabelEntry
                ActiveBorderColor="LightGreen"
                ActiveTextColor="LightGreen"
                DefaultBorderColor="LightGray"
                DefaultTextColor="LightGray"
                HorizontalOptions="CenterAndExpand"
                IsPassword="True"
                Placeholder="Password"
                VerticalOptions="CenterAndExpand"
                WidthRequest="150" />
            <customentries:ConfirmFloatingLabelEntry
                Margin="30,5"
                ActiveTextColor="#5a97d6"
                ButtonBackgroundColor="#5c94cd"
                CornerRadius="5"
                DefaultTextColor="White"
                Keyboard="Email"
                Placeholder="Email Address"
                TextColor="White"
                ViewBackgroundColor="#044f9e">
                <customentries:ConfirmFloatingLabelEntry.Behaviors>
                    <customentries:EmailValidationBehavior />
                </customentries:ConfirmFloatingLabelEntry.Behaviors>
            </customentries:ConfirmFloatingLabelEntry>

        </StackLayout>
    </Grid>

</ContentPage>
