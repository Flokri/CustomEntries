<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="CustomEntriesExample.MainPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:customentries="clr-namespace:CustomEntries;assembly=CustomEntries"
    xmlns:d="http://xamarin.com/schemas/2014/forms/design"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
            <customentries:FloatingLabelEntry
                ActiveBorderColor="LightCoral"
                ActiveTextColor="LightCoral"
                DefaultBorderColor="LightGray"
                DefaultTextColor="LightGray"
                HorizontalOptions="CenterAndExpand"
                Placeholder="Username"
                VerticalOptions="CenterAndExpand"
                WidthRequest="150" />

            <customentries:FloatingLabelEntry
                ActiveBorderColor="LightGreen"
                ActiveTextColor="LightGreen"
                DefaultBorderColor="LightGray"
                DefaultTextColor="LightGray"
                HorizontalOptions="CenterAndExpand"
                IsPassword="True"
                Placeholder="Password"
                VerticalOptions="CenterAndExpand"
                WidthRequest="150" />
        </StackLayout>
    </Grid>

</ContentPage>
